<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/all_adapter_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/water_warn_sitename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="left"
        android:paddingLeft="3dp"
        android:text="@string/site_name"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/water_warn_siteadd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="left"
        android:text="@string/site_address"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/water_warn_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="@string/water_level"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/water_warn_waterlevel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="right"
        android:text="@string/warning_level"
        android:textSize="12sp" />

    
</LinearLayout>