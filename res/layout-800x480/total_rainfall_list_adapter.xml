<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/total_rainfall_adatper"
    android:layout_width="fill_parent"
     android:background="@drawable/all_adapter_bg"
    android:gravity="center|center_vertical"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

        <TextView
            android:id="@+id/total_rainfall_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:text="名称"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/total_rainfall_last"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingLeft="0dp"
            android:text="本次降雨"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/total_rainfall_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="年度雨量"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/total_rainfall_afteryear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="去年同期"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/total_rainfall_allyear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="历年同期"
            android:textSize="12sp" />

</LinearLayout>