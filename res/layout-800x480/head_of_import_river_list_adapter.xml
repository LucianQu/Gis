<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_of_import_river"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:gravity="center|center_vertical"
    android:background="@drawable/all_adapter_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/import_river_site_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:gravity="left"
        android:text="@string/site_name"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/import_river_site_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:gravity="left"
        android:text="@string/site_address"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/import_river_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:gravity="left"
        android:paddingLeft="8dp"
        android:text="@string/time"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/import_river_water_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="right"
        android:text="@string/water_level"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/import_river_warning_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="@string/super_level"
        android:textSize="12sp" />

</LinearLayout>