<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_of_water_forcast_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
   	android:gravity="center"
    android:background="@drawable/titlebar_bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:layout_height="wrap_content"
         >

        <TextView
            android:id="@+id/duanmian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/forcast_duanmian" />

        <Spinner 
            android:id="@+id/water_forcast_spinner2"
            android:background="@drawable/titlebar_spinner_bg"
            android:layout_toRightOf="@id/duanmian"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

</LinearLayout>