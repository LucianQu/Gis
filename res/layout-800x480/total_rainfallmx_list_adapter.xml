<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/total_rainfall_adatper"
    android:layout_width="fill_parent"
     android:background="@drawable/all_adapter_bg"
    android:gravity="center|center_vertical"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

   

        <TextView
            android:id="@+id/total_rainfall_sitename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:textSize="12sp"
            android:gravity="left"
            android:text="站名" />

        <TextView
            android:id="@+id/total_rainfall_siteadd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:gravity="left"
             android:textSize="12sp"
            android:text="所在地" />

        <TextView
            android:id="@+id/total_rainfall_totalrainfall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="12sp"
            android:text="累计雨量（毫米）" />
    

</LinearLayout>